global !p

def relpath():
  return os.path.relpath(path, os.getcwd())

def guard_name():
  return re.sub(r'(\.|/|$)', '_', relpath()).upper()

def class_name():
  return re.sub(r'(?:^|_)(.)', lambda m: m.group(1).upper(), snip.basename)

endglobal

